<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- 위젯 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="메모 제목"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/widget_open_app"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_open_app"
            android:contentDescription="앱 열기" />

    </LinearLayout>

    <!-- 메모 아이템 리스트 -->
    <LinearLayout
        android:id="@+id/memo_items_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 동적으로 메모 아이템들이 추가됩니다 -->
        <TextView
            android:id="@+id/memo_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 메모 아이템 1"
            android:textSize="14sp"
            android:textColor="#495057"
            android:paddingVertical="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/memo_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 메모 아이템 2"
            android:textSize="14sp"
            android:textColor="#495057"
            android:paddingVertical="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/memo_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 메모 아이템 3"
            android:textSize="14sp"
            android:textColor="#495057"
            android:paddingVertical="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/memo_more_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2개 더..."
            android:textSize="12sp"
            android:textColor="#6c757d"
            android:paddingVertical="2dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 위젯 푸터 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방금 전"
            android:textSize="10sp"
            android:textColor="#adb5bd" />

    </LinearLayout>

</LinearLayout>